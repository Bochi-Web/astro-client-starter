---
/**
 * Testimonials
 * Customer reviews displayed as a card grid.
 * Each card has a quote, star rating, customer name, and title.
 *
 * data-section="testimonials"
 */

import SectionWrapper from '../ui/SectionWrapper.astro';
import Card from '../ui/Card.astro';

const testimonials = [
  {
    quote:
      "They showed up on time, did incredible work, and the price was exactly what they quoted. Best service company in Cedar Rapids.",
    name: 'Sarah M.',
    title: 'Homeowner',
    rating: 5,
  },
  {
    quote:
      "I've tried other companies before, but none compare to the level of professionalism and attention to detail these guys bring. Highly recommend.",
    name: 'James T.',
    title: 'Property Manager',
    rating: 5,
  },
  {
    quote:
      "Fast response, fair pricing, and quality work. They've handled everything from small repairs to a full kitchen remodel for us. Couldn't be happier.",
    name: 'Linda K.',
    title: 'Repeat Customer',
    rating: 5,
  },
];
---

<SectionWrapper id="testimonials">
  <!-- Section heading -->
  <div class="text-center mb-12 md:mb-16">
    <h2 class="text-3xl md:text-4xl font-heading font-bold text-secondary mb-4">
      What Our Customers Say
    </h2>
    <p class="text-content-light text-lg max-w-2xl mx-auto">
      Don't just take our word for it â€” hear from the homeowners we've helped.
    </p>
  </div>

  <!-- Testimonial cards -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    {testimonials.map((t) => (
      <Card class="flex flex-col">
        {/* Star rating */}
        <div class="flex gap-1 mb-4">
          {Array.from({ length: t.rating }).map(() => (
            <svg class="w-5 h-5 text-accent" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
          ))}
        </div>

        {/* Quote */}
        <blockquote class="text-content-light leading-relaxed mb-6 flex-1 italic">
          "{t.quote}"
        </blockquote>

        {/* Attribution */}
        <div class="border-t border-border pt-4">
          <div class="font-semibold text-secondary">{t.name}</div>
          <div class="text-sm text-content-light">{t.title}</div>
        </div>
      </Card>
    ))}
  </div>
</SectionWrapper>
